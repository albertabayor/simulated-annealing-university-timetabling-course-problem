{
  "name": "timetable-sa",
  "version": "1.0.0",
  "description": "A powerful, modular solver for University Course Timetabling Problem (UCTP) using Simulated Annealing algorithm with TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:verbose": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "example:basic": "tsx src/examples/basic-usage.ts",
    "example:custom": "tsx src/examples/custom-config.ts",
    "example:json": "tsx src/examples/json-usage.ts",
    "dev": "tsx src/index-old.ts src/data_uisi.xlsx"
  },
  "keywords": [
    "timetable",
    "scheduling",
    "university",
    "timetabling",
    "simulated-annealing",
    "optimization",
    "constraint-satisfaction",
    "course-scheduling",
    "uctp",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/timetable-sa.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/timetable-sa/issues"
  },
  "homepage": "https://github.com/yourusername/timetable-sa#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}
